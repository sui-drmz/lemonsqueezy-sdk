    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Pest Tests",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/vendor/bin/pest",
            "args": [
                "--debug"
            ],
            "port": 9003,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}"
            }
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
        }
    ]
}